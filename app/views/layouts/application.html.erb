<!DOCTYPE html>
<html>
  <head>
    <title>Microblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <h4>Welcome: <%= current_user.email unless current_user.nil? %>, Hi <%= current_user.firstname %></h4>
 
  <% if current_user %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-sm btn-sm btn-primary" %>
  <% else %>
    <%= link_to "Login", new_user_session_path, class: "btn btn-sm btn-outline-success"  %>    
    <%= link_to "Signup", new_user_registration_path, class: "btn btn-sm btn-outline-danger" %>
  <% end %>


    <%= yield %>
  </body>
</html>
