<%= link_to "New Portfolio", new_portfolio_path %>
<hr>
<h1>Portfolio Items</h1>
<div>
<% @portfolio_items.each do |portfolio_item| %> 
  <h4><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item)  %> # <%= portfolio_item.id %></h4>
  <h5><%= portfolio_item.subtitle %></h5>
  <%= portfolio_item.body %><br>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %> <br>  
  <%= link_to "Edit", edit_portfolio_path(portfolio_item) %>
  <%= link_to "Delete", portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
  <hr>
<% end %>
</div> 

