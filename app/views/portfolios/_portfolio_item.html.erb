<h4><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item)  %> # <%= portfolio_item.id %></h4>
<h5><%= portfolio_item.subtitle %></h5>
<%= portfolio_item.body %><br>
<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %> <br>
<%= link_to "Edit", edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
<%= link_to "Delete", portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
