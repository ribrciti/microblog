<h1>New Portfolio</h1>

<%= form_with(model: @portfolio_item, local: true) do |form| %>
  

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

   <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="form-control">
    <ul>
      <%= form.fields_for :technologies do |technology_form| %>
        <li>
          <%= technology_form.label :name %>
          <%= technology_form.text_field :name %>
        </li>
      <% end %>
    </ul>    
  </div>
  <br>
  <br>
  <br>
  <br>
  <br>

   <div class="field">
    <%= form.label :thumb_image %>
    <%= form.text_field :thumb_image %>
  </div>

  <div class="field">
    <%= form.label :main_image %>
    <%= form.text_field :main_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', portfolios_path %>
